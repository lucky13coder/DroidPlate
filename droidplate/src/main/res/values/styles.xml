<resources>

    <!-- Base application theme. -->
    <style name="None">
    </style>

    <style name="Droid.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color.primary</item>
        <item name="colorPrimaryDark">@color/color.primary.dark</item>
        <item name="colorAccent">@color/color.accent</item>
        <item name="android:windowBackground">@color/bg.window</item>
        <item name="colorButtonNormal">@color/color.button.normal</item>
        <item name="android:textColorPrimary">@color/text.primary</item>
        <item name="android:textColorSecondary">@color/text.secondary</item>
        <item name="android:textColorLink">@color/text.link</item>
        <item name="android:buttonStyle">@style/Droid.Theme.Button.Default</item>
    </style>

    <style name="Droid.Theme.Button.Default" parent="@android:style/Widget.Button">
        <item name="android:minHeight">@dimen/height.min.button</item>
        <item name="android:minWidth">@dimen/width.min.button</item>
        <item name="android:background">@drawable/color_button_default</item>
    </style>

    <style name="Droid.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Droid.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
